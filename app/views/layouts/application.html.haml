!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title ObjetivoApp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .header
      .d-flex.justify-content-between
        = link_to root_path,style:" padding-left: 20px; text-decoration: none; color: white; font-size: 40px; " do
          OBJETIVO
        - if user_signed_in?
          .header-right-box{style: 'padding: 10px;' }
            = link_to edit_user_registration_path do
              %button.btn.btn-outline-light
                設定
            = link_to destroy_user_session_path, method: :delete, data: {confirm: "ログアウトしますか？"} do
              %button.btn.btn-outline-light
                ログアウト
        - else
          .header-right-box{style: 'padding: 10px;' }
            = link_to new_user_registration_path do
              %button.btn.btn-outline-light
                新規登録
            = link_to new_user_session_path do
              %button.btn.btn-outline-light
                ログイン
    = render 'layouts/notifications'
    = yield
